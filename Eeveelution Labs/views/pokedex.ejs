<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/style.css">
    <title>Pokédex</title> 
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown" data-bs-theme="dark">
                        <a class="nav-link dropdown-toggle" href="pokeshop" role="button" data-bs-toggle="dropdown">PokéShop</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/pokeshop">Store</a></li>
                            <li><a class="dropdown-item" href="/cart">Cart</a></li>
                            <li><a class="dropdown-item" href="/addProduct">Add Product</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/pokedex">Pokédex</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact Us</a>
                    </li> 
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 pt-5">
      <div class="row mb-4">
          <div class="text-center">
              <h5>Pokédex</h5>
          </div>
          <div class="text-end">
              <form method="GET" action="/pokedex" class="d-flex align-items-center justify-content-end">
                  <label for="sort" class="me-2 mb-0">Sort by:</label>
                  <select id="sort" name="sort" class="form-select me-2">
                      <option value="id-asc">ID (Lowest-Highest)</option>
                      <option value="id-desc">ID (Highest-Lowest)</option>
                      <option value="name-asc">Name (A-Z)</option>
                      <option value="name-desc">Name (Z-A)</option>
                  </select>
                  <button type="submit" class="btn btn-primary">Sort</button>
              </form>
          </div>
      </div>
  

      <div class="row">
        <% if (pokemons && pokemons.length > 0) { %>
            <% pokemons.forEach(pokemon => { %>
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <a href="/pokedex/<%= pokemon.pokemonId %>" class="text-decoration-none text-dark">
                            <img src="/images/<%= pokemon.image %>" class="card-img-top" alt="<%= pokemon.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= pokemon.name %></h5>
                                <p class="card-text">ID: <%= pokemon.pokemonId %></p>
                                <p class="card-text">Type: <%= pokemon.type %></p>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <p>No Pokémon found.</p>
            </div>
        <% } %>
    </div>
</div>
