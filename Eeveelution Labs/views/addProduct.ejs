          <div class="container mt-5 pt-5">
            <div class="row mb-4">
                <div class="col-12 text-center">
                    <h5>Add New Product</h5>
                </div>
            </div>
        
            <div class="row">
                <div class="col-md-6 mb-6 mx-auto">
                    <form action="/addProduct" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="name">Product Name:</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="price">Price:</label>
                            <input type="text" id="price" name="price" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="image">Current Image:</label>
                            <input type="text" name="currentImage" class="form-control" required>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="image">New Image:</label>
                            <input type="file" id="image" name="image" accept="image/*" class="form-control-file" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mt-3">Add Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script>
          // Define your fetchCurrentImage function
          function fetchCurrentImage() {
              // Example logic: Replace with your actual logic to fetch current image URL dynamically
              const currentImageURL = '/images/your_current_image.jpg'; // Replace with actual URL fetch logic
              
              // Set the input field and image element with the fetched URL
              document.getElementById('currentImage').value = currentImageURL;
              document.getElementById('currentImageView').src = currentImageURL;
          }
